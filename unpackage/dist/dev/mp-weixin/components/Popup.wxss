
.popupBox{
	position: absolute;
	width: 100vw;
	height: 100vh;
	top: 0;
	left: 0;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	z-index: 1000000;
	background-color: rgba(0,0,0,0.5);
}
.popup{
	display: -webkit-inline-box;
	display: -webkit-inline-flex;
	display: inline-flex;
	min-height: 90rpx;
	width: 60vw;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	border-radius: 5px;
	background-color: #fff;
	padding: 15rpx 0;
}
.popupIcon{
	width: 40rpx;
	height: 40rpx;
	margin: 0 25rpx;
}
.popupText{
	line-height: 50rpx;
	color: #000000;
}

